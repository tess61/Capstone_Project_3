 <body class="">
        <%- include('partials/header.ejs') %>
      <main class="container mt-0 border-top-10 ">    
          <h1 class="text-center mb-4 font-italic">Welcome to Blog App</h1>
          
          <div class="form-container">
              <!-- <h2 class="form-text text-center">Edit Your Blog</h2> -->
              <p class="form-text text-center">Fill out the form to create your blog</p>
              
              <form action="/blogList" method="post" class="bg-light p-4 rounded shadow-sm">
                  <div class="form-group">
                      <label for="bTitle">Blog Title</label>
                      <input
                          type="text"
                          id="bTitle"
                          name="blogTitle"
                          class="form-control"
                          placeholder="Your Title Here..."
                          required
                      />
                  </div>

                  <div class="form-group">
                      <label for="bDes">Blog Description</label>
                      <textarea
                          id="bDes"
                          name="blogDes"
                          class="form-control"
                          placeholder="Your Blog here..."
                          rows="6"
                          required
                      ></textarea>
                  </div>

                  <button type="submit" class="btn btn-primary btn-block mt-4">PUBLISH</button>
              </form>
          </div>
      </main>
      <%- include('partials/footer.ejs') %>
</body>