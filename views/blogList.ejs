    <%- include('partials/header.ejs') %>
    <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous"> -->

        <% if (blogList.length < 1) { %>
            <h1 class="no-blog-title">
                You don't have any blogs yet. Please visit <br />the home page to create a
                new blog.
            </h1>
            <% } else {%>
                <h1 class="title">Your Blogs list</h1>
                    <div class="mb-3 container card">
                        <div class="home-container">
                                <% for( let index=0; index < blogList.length; index++ ) { %>
                                    <div class="container card border-0">
                                        <div class="card border-0">
                                            <span class="text-center">
                                                <%= index+ 1 %>
                                            </span>
                                            <h4 class="card-title">
                                                <%= blogList[index].title %>
                                            </h4>
                                            <div>
                                                <p class="card-text">
                                                    <%= blogList[index].description?.slice(0,300) %>
                                                        <% if (blogList[index].description?.length> 299) { %> ...
                                                            <a class="" href="/blogDetails/<%= blogList[index].id %>">
                                                                View Blog</a>
                                                            <% } %>
                                                </p>
                                            </div>
                                        </div>
                                        <div class="mt-3" style="display: flex; ">
                                            <form action="/delete/<%= blogList[index].id %>" method="post">
                                                <button class="mx-5 btn btn-danger">Delete</button>
                                            </form>
                                            <!-- <a class="edit-btn" href="/edit/<%=  blogList[index].id %>">edit</a> -->
                                            <form action="/edit/<%= blogList[index].id %>" method="post">
                                                <button class="btn btn-primary">Edit</button>
                                            </form>
                                        </div>
                                    </div>
                                    <hr>
                                    <% } %>           
                        </div>
                    </div>
                    <% } %>
                    <%- include('partials/footer.ejs') %>